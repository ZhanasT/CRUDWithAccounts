@{
    ViewData["Title"] = "Catalog";
}
@section Scripts {
    <script>
        async function addToCart(diskId) {
            var response = await fetch(`https://localhost:7098/ShoppingCartAPI/AddToShoppingCart?diskId=${diskId}&username=@User.Identity.Name`);
            if (response.status == 200) {
                document.getElementById("addToCartButton-"+diskId);
            }
        }
    </script>
}

<h1>@ViewData["Title"]</h1>
<table class="table table-bordered">
    @foreach (var disk in Model)
    {
        <tr>
            <td>@disk.Id</td>      
            <td>@disk.Manufacturer</td>
            <td>@disk.Model</td>
            <td>@disk.Type</td>
            <td>@disk.Capacity</td>
            <td>@disk.ReadSpeed</td>
            <td>@disk.WriteSpeed</td>
            <td>@disk.Cost</td>
            @if (User.Identity.IsAuthenticated)
            {
                <td><button class="button" onclick=addToCart(@disk.Id) id="addToCartButton-@disk.Id">Добавить в корзину</button></td>
            }
        </tr>
    }
</table>


